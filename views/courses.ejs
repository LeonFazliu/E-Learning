<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<%- include('partials/navbar') %>
<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-gray-800 mb-10 text-center">Courses</h2>
    <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% courses.forEach(course => { %>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105">
          <div class="relative h-52">
            <img src="<%= course.imageUrl %>" alt="<%= course.name %>" class="absolute inset-0 w-full h-full object-cover">
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= course.name %></h3>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= course.description %></p>
            <div class="text-sm text-gray-800 space-y-1">
              <p>Instructor: <strong class="text-blue-600"><%= course.instructor %></strong></p>
              <p>Duration: <strong><%= course.duration %></strong></p>
              <p>Rating: 
                <span class="text-yellow-500 font-bold">
                  <%= course.rating ? course.rating.toFixed(1) : 'N/A' %> 
                  <i class="fas fa-star"></i>
                </span>
              </p>
            </div>
            <a href="/courses/<%= course.id %>" class="mt-4 inline-block w-full text-center bg-purple-400 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-200 text-sm font-medium">
              Enroll Now
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>