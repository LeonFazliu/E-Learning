<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet"> <!-- Include Tailwind CSS -->

<nav class="flex items-center justify-between bg-gray-800 p-4 shadow-md">
    <div class="navbar-logo">
        <a href="/" class="text-2xl font-bold text-blue-400 hover:text-blue-300">E-Learning</a>
    </div>
    <ul class="flex items-center space-x-4">
        <li><a href="/" class="text-white hover:text-blue-300">Home</a></li>
        <li><a href="/courses" class="text-white hover:text-blue-300">Courses</a></li>
        
        <% if (user) { %>
            <% if (user.role === 'admin') { %>
                <li><a href="/admin/dashboard" class="text-white hover:text-blue-300">Admin Dashboard</a></li>
            <% } else if (user.role === 'teacher') { %>
                <li><a href="/teacher/dashboard" class="text-white hover:text-blue-300">Teacher Dashboard</a></li>
            <% } %>
            
            <li><a href="/my-courses" class="text-white hover:text-blue-300">My Courses</a></li>
            <li>
                <a href="/auth/logout" id="logoutLink" class="text-red-500 hover:text-red-400">Log out</a>
            </li>
        <% } %>
    </ul>
</nav>

<script>
    document.getElementById('logoutLink')?.addEventListener('click', async (event) => {
        event.preventDefault(); // Prevent the default link behavior

        try {
            const response = await fetch('/auth/logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                // Redirect to home or login page
                window.location.href = '/auth/login'; // or wherever you want to redirect
            } else {
                console.error('Logout failed:', await response.text());
            }
        } catch (error) {
            console.error('Error during logout:', error);
        }
    });
</script>
