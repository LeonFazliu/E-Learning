<%- include('partials/navbar') %>

<h1 class="text-3xl font-bold text-center my-8">My Saved Courses</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-4">
    <% courses.forEach(course => { %>
        <div class="course-card bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105">
            <div class="relative overflow-hidden">
                <img class="w-full h-48 object-cover" src="<%= course.imageUrl %>" alt="<%= course.name %>">
            </div>
            <div class="p-4">
                <h3 class="text-xl font-semibold mb-2"><%= course.name %></h3>
                <p class="text-gray-600 text-sm mb-4"><%= course.description %></p>
                <a href="/courses/<%= course.id %>" class="block bg-blue-500 text-white text-center py-2 rounded hover:bg-blue-600 transition duration-200">View Course</a>
            </div>
        </div>
    <% }); %>
</div>
