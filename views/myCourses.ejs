<%- include('partials/navbar') %>

<h1 class="text-3xl font-bold text-center my-8 text-gray-900">My Saved Courses</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 px-6">
    <% courses.forEach(course => { %>
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <div class="relative h-48">
                <img class="absolute inset-0 w-full h-full object-cover" src="<%= course.imageUrl %>" alt="<%= course.name %>">
            </div>
            <div class="p-4">
                <h3 class="text-lg font-bold text-gray-800 mb-2"><%= course.name %></h3>
                <p class="text-gray-600 text-sm mb-4"><%= course.description %></p>
                <a href="/courses/<%= course.id %>" class="block bg-purple-300 text-white text-center py-2 rounded-lg hover:bg-purple-700 transition duration-200">
                    View Course
                </a>
            </div>
        </div>
    <% }); %>
</div>